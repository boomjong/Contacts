<meta name="viewport" content="width=device-width, initial-scale=1">
<div class="bg">
	<div class="content">
		<div class="topnav" id="myTopnav">
			<a href="http://wakeit.nl:3000/contacts/" class="active">Home</a>
			<a href="http://wakeit.nl:3000/groups/">Groepen</a>
			<a href="http://wakeit.nl:3000/contacts.xml">Telefoonboek</a>
			<a href="javascript:void(0);" style="font-size:15px;" class="icon" onclick="myFunction()">&#9776;</a>
		</div>
		<h1>Leden van de groep <%= @group.group_name %></h1>
		<% @group.contacts.each do |contact|%>
			<p><%= contact.first_name %>
            <%= contact.middle_name%>
            <%= contact.last_name%>
			<%= contact.phone_number%>
			<%= contact.street_name%>
            <%= contact.street_number%>
			<%= contact.zipcode%>
            <%= contact.city%>
			<%= contact.country%></p><br>
		<% end%>
		<div class="actions">
			<%= link_to 'Terug naar het overzicht', "/groups/" %>
		</div> 
		</div>
	</div>
</div>